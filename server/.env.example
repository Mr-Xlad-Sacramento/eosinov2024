# PostgreSQL (Docker port 5439)
POSTGRES_HOST=localhost
POSTGRES_PORT=5439
POSTGRES_DB=eosifinance
POSTGRES_USER=eosi_user
POSTGRES_PASSWORD=change_me_in_production

# Redis (Docker port 6385)
REDIS_HOST=localhost
REDIS_PORT=6385
REDIS_PASSWORD=change_me_in_production

# Admin dashboard token — REQUIRED, minimum 16 characters, never commit the real value
# Generate one: node -e "console.log(require('crypto').randomBytes(24).toString('hex'))"
ADMIN_TOKEN=change_me_in_production

# SMTP — leave blank to disable email notifications during local dev
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@eosifinance.org
EMAIL_NOTIFY_1=eosi@tutanota.com
EMAIL_NOTIFY_2=info@eosifinance.org

# Server
PORT=3001
NODE_ENV=development
